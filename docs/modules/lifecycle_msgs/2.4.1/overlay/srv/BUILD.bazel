load("@rosidl_cmake//:rules.bzl", "ros_interface")

package(default_visibility = ["//visibility:public"])

ros_interface(
    name = "ChangeState",
    src = "ChangeState.srv",
    deps = [
        "//msg:Transition",
        # Services have implicit deps
        "@service_msgs//msg:ServiceEventInfo",
    ],
)

ros_interface(
    name = "GetAvailableStates",
    src = "GetAvailableStates.srv",
    deps = [
        "//msg:State",
        # Services have implicit deps
        "@service_msgs//msg:ServiceEventInfo",
    ],
)

ros_interface(
    name = "GetAvailableTransitions",
    src = "GetAvailableTransitions.srv",
    deps = [
        "//msg:TransitionDescription",
        # Services have implicit deps
        "@service_msgs//msg:ServiceEventInfo",
    ],
)

ros_interface(
    name = "GetState",
    src = "GetState.srv",
    deps = [
        "//msg:State",
        # Services have implicit deps
        "@service_msgs//msg:ServiceEventInfo",
    ],
)