# Imports

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "rmw_security_common",
    srcs = glob(["src/**/*.cpp"]),
    hdrs = glob([
        "include/**/*.h",
        "include/**/*.hpp",
    ]),
    includes = ["include"],
    deps = [
        "@rcutils",
        "@rmw",
        "@rosidl_runtime_c",
    ],
)

# ROS C/C++ tests

cc_test(
    name = "test_security",
    srcs = ["test/test_security.cpp"],
    defines = [
        "RCUTILS_ENABLE_FAULT_INJECTION",
    ],
    deps = [
        "@googletest//:gtest",
        "@googletest//:gtest_main",
        "@rcutils",
        "@rmw",
        "@rosidl_runtime_c",
        ":rmw_security_common",
    ],
)
