        "@service_msgs//msg:ServiceEventInfo",
    ],
)

ros_interface(
    name = "UnloadNode",
    src = "UnloadNode.srv",
    deps = [
        # Services have implicit deps
        "@service_msgs//msg:ServiceEventInfo",
    ]
)
