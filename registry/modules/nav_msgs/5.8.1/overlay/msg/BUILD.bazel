load("@rosidl_cmake//:rules.bzl", "ros_interface")

package(default_visibility = ["//visibility:public"])

ros_interface(
    name = "Goals",
    src = "Goals.msg",
    deps = [
        "@geometry_msgs//msg:PoseStamped",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "GridCells",
    src = "GridCells.msg",
    deps = [
        "@geometry_msgs//msg:Point",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "MapMetaData",
    src = "MapMetaData.msg",
    deps = [
        "@builtin_interfaces//msg:Time",
        "@geometry_msgs//msg:Pose",
    ],
)

ros_interface(
    name = "OccupancyGrid",
    src = "OccupancyGrid.msg",
    deps = [
        ":MapMetaData",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "Odometry",
    src = "Odometry.msg",
    deps = [
        "@geometry_msgs//msg:PoseWithCovariance",
        "@geometry_msgs//msg:TwistWithCovariance",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "Path",
    src = "Path.msg",
    deps = [
        "@geometry_msgs//msg:PoseStamped",
        "@std_msgs//msg:Header",
    ],
)
