load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load("@rules_python//python:defs.bzl", "py_library", "py_binary")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "interface_templates",
    srcs = glob(["resource/**/*.em"]),
)

exports_files(
    srcs = ["resource/rosidl_typesupport_protobuf_cpp__visibility_control.h.in"],
)

cc_library(
    name = "rosidl_typesupport_protobuf_cpp",
    srcs = glob(["src/**"]),
    hdrs = glob(["include/**"]),
    includes = ["include"],
    deps = [
        "@rosidl_typesupport_protobuf",
        "@rosidl_runtime_cpp",
    ],
)

py_library(
    name = "rosidl_typesupport_protobuf_cpp_py",
    srcs = glob(["rosidl_typesupport_protobuf_cpp/**/*.py"]),
    deps = [
        "@rosidl_pycommon",
        "@rosidl_typesupport_protobuf//:rosidl_typesupport_protobuf_py"
    ],
)

genrule(
    name = "cli_rename",
    srcs = ["bin/rosidl_typesupport_protobuf_cpp"],
    outs = ["bin/rosidl_typesupport_protobuf_cpp.py"],
    cmd = "cp $(location :bin/rosidl_typesupport_protobuf_cpp) $(location :bin/rosidl_typesupport_protobuf_cpp.py)",
)

py_binary(
    name = "cli",
    srcs = [":bin/rosidl_typesupport_protobuf_cpp.py"],
    main = ":bin/rosidl_typesupport_protobuf_cpp.py",
    python_version = "PY3",
    deps = [":rosidl_typesupport_protobuf_cpp_py"],
)

cc_test(
    name = "test_wstring_conversion",
    srcs = ["test/test_wstring_conversion.cpp"],
    deps = [
        "@googletest//:gtest",
        "@googletest//:gtest_main",
        ":rosidl_typesupport_protobuf_cpp",
    ],
)
