load("@rosidl_cmake//:rules.bzl", "ros_interface")

package(default_visibility = ["//visibility:public"])

ros_interface(
    name = "JointTrajectory",
    src = "JointTrajectory.msg",
    deps = [
        ":JointTrajectoryPoint",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "JointTrajectoryPoint",
    src = "JointTrajectoryPoint.msg",
    deps = [
        "@builtin_interfaces//msg:Duration",
    ],
)

ros_interface(
    name = "MultiDOFJointTrajectory",
    src = "MultiDOFJointTrajectory.msg",
    deps = [
        ":MultiDOFJointTrajectoryPoint",
        "@std_msgs//msg:Header",
    ],
)

ros_interface(
    name = "MultiDOFJointTrajectoryPoint",
    src = "MultiDOFJointTrajectoryPoint.msg",
    deps = [
        "@builtin_interfaces//msg:Duration",
        "@geometry_msgs//msg:Transform",
        "@geometry_msgs//msg:Twist",
    ],
)
