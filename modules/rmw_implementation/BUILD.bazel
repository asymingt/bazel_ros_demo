# Imports

load("@bazel_skylib//rules:common_settings.bzl", "string_flag")
load("@ros//ros:data.bzl", "ros_data")
load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

# Arguments

string_flag(
    name = "rmw",
    build_setting_default = "rmw_cyclonedds_cpp",
)

# Middleware implementations

config_setting(
    name = "rmw_fastrtps_cpp",
    flag_values = {
        ":rmw": "rmw_fastrtps_cpp"
    },
)

config_setting(
    name = "rmw_fastrtps_dynamic_cpp",
    flag_values = {
        ":rmw": "rmw_fastrtps_dynamic_cpp"
    },
)

config_setting(
    name = "rmw_cyclonedds_cpp",
    flag_values = {
        ":rmw": "rmw_cyclonedds_cpp"
    },
)

# Libraries

cc_library(
    name = "rmw_implementation",
    deps = select({
        ":rmw_cyclonedds_cpp": ["@rmw_cyclonedds_cpp"],
        ":rmw_fastrtps_cpp": ["@rmw_fastrtps_cpp"],
        ":rmw_fastrtps_dynamic_cpp": ["@rmw_fastrtps_dynamic_cpp"],
        "//conditions:default": ["@rmw_cyclonedds_cpp"],
    }),
)

