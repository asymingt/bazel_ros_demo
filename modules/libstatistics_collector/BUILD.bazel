# Libraries

cc_ros_library(
    name = "msgs_cc",
    deps = [
        "@builtin_interfaces//:msg__Time",
        "@statistics_msgs//:msg__MetricsMessage",
        "@statistics_msgs//:msg__StatisticDataType",
    ],
)

cc_library(
    name = "libstatistics_collector",
    srcs = glob(["src/**/*.cpp"]),
    hdrs = glob(["include/**/*.hpp"]),
    includes = ["include"],
    deps = [
        "@rcpputils",
        ":msgs_cc",
    ],
)

