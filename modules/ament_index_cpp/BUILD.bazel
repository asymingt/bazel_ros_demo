# Imports

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

cc_library(
    name = "ament_index_cpp",
    srcs = glob(["src/**/*.cpp"]),
    hdrs = glob(["include/**/*.hpp", "include/**/*.h"]),
    includes = ["include"],
    cxxopts = [
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-fPIC",
        "-std=gnu++17",
    ],
    local_defines = [
        "ROS_PACKAGE_NAME=\\\"ament_index_cpp\\\"",
    ],
    deps = ["@rules_cc//cc/runfiles"],
    visibility = ["//visibility:public"],
)

cc_test(
    name = "ament_index_cpp_utest",
    visibility = ["//visibility:public"],
    srcs = ["test/utest.cpp"],
    data = glob([
        "test/prefix1/**",
        "test/prefix2/**"
    ]),
    cxxopts = [
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-std=gnu++17",
    ],
    linkopts = [
        "-pthread",
    ],
    deps = [
        ":ament_index_cpp",
        "@googletest//:gtest",
        "@googletest//:gtest_main",
    ],
)
