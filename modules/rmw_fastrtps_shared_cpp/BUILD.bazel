load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

# ROS C/C++ libraries

cc_library(
    name = "rmw_fastrtps_shared_cpp",
    srcs = glob(["src/**/*.hpp", "src/**/*.cpp"]),
    hdrs = glob(["include/**/*.h", "include/**/*.hpp"]),
    includes = ["include"],
    defines = [
        "FASTCDR_DYN_LINK",
        "FASTDDS_DYN_LINK",
        "FOONATHAN_MEMORY=1",
        "FOONATHAN_MEMORY_VERSION_MAJOR=0",
        "FOONATHAN_MEMORY_VERSION_MINOR=7",
        "FOONATHAN_MEMORY_VERSION_PATCH=3",
        "RCUTILS_ENABLE_FAULT_INJECTION",
        "RMW_FASTRTPS_SHARED_CPP_BUILDING_LIBRARY",
        "ROS_PACKAGE_NAME=rmw_fastrtps_shared_cpp",
        "TINYXML2_IMPORT",
        "_FILE_OFFSET_BITS=64",
        "rmw_fastrtps_shared_cpp_EXPORTS",
    ],
    deps = [
        "@fastcdr",
        "@fastdds",
        "@rcpputils",
        "@rcutils",
        "@rmw_dds_common",
        "@rmw_security_common",
        "@rmw",
        "@rosidl_dynamic_typesupport",
        "@rosidl_typesupport_introspection_c",
        "@rosidl_typesupport_introspection_cpp",
        "@tracetools",
    ],
)

